{
  "name": "mob-timer",
  "version": "0.1.0",
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "dependencies": {
    "autoprefixer": "8.2.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-react-app": "^3.1.1",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "^2.3.2",
    "css-loader": "0.28.11",
    "dotenv": "5.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "fs-extra": "5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "interpolate-html-plugin": "^3.0.0",
    "jest": "22.1.4",
    "node-sass": "^4.8.3",
    "normalize.css": "^8.0.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-loader": "2.1.3",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.3.1",
    "react-dev-utils": "^6.0.0-next.b2fd8db8",
    "react-dnd": "^2.6.0",
    "react-dnd-html5-backend": "^2.6.0",
    "react-dom": "^16.3.1",
    "react-md": "^1.2.13",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-observable": "^0.18.0",
    "rxjs": "^5.5.10",
    "sass-loader": "^7.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "0.20.3",
    "styled-components": "^3.2.5",
    "sw-precache-webpack-plugin": "0.11.5",
    "ts-loader": "^4.2.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-manifest-plugin": "2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.4",
    "@types/react": "16.3.10",
    "@types/react-dnd": "^2.0.36",
    "@types/react-dnd-html5-backend": "^2.1.9",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.16",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.0",
    "ts-jest": "22.4.2",
    "tsconfig-paths-webpack-plugin": "^3.0.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "webpack-dev-server": "3.1.3"
  },
  "homepage": "https://beeequeue.github.io/mob-timer",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "@state/(.*)": "<rootDir>/src/state/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "yarn format",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "format": "prettier --write",
    "format:all": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "lint": "tslint --project .",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "start": "node scripts/start.js",
    "test": "node scripts/test.js --env=jsdom"
  }
}
