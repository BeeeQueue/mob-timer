{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "arrow-parens": false,
    "no-default-export": true,
    "member-ordering": false
  }
}
